@model RestauranteEtec.Models.Categoria
@{
    ViewData["Title"] = "Categoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Detalhes da Categoria</div>
                <hr>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                </dl>
                <div>
                    <a class="btn btn-warning mr-3" asp-action="Edit" asp-route-id="@Model.Id">Alterar</a>
                    <a class="btn btn-light" asp-action="Index">Voltar a Listagem</a>
                </div>
            </div>
        </div>
    </div>
</div>

