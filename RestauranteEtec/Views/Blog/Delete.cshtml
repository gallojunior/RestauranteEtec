@model RestauranteEtec.Models.Blog
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Excluir Blog</div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <img src="@(System.IO.File.Exists(ViewData["wwwroot"] + Model.Imagem) ?
                                    Url.Content(Model.Imagem) : Url.Content("~/images/sem_foto.png"))"
                             class="img-fluid" id='PreviewImagem' />
                    </div>
                    <div class="col-9">
                        <div class="row">
                            <label class="col-3" asp-for="Titulo"></label>
                            <label class="col-9">@Html.DisplayFor(model => model.Titulo)</label>
                        </div>
                        <div class="row">
                            <label class="col-3" asp-for="Texto"></label>
                            <label class="col-9">@Html.DisplayFor(model => model.Texto)</label>
                        </div>
                        <div class="row">
                            <label class="col-3" asp-for="DataCadastro"></label>
                            <label class="col-9">@Html.DisplayFor(model => model.DataCadastro)</label>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <h5 class="my-3">Confirma a Exclusão deste Blog?</h5>
                    <div class="form-group">
                        <input type="submit" value="Excluir" class="btn btn-danger mr-2" />
                        <a class="btn btn-light" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
