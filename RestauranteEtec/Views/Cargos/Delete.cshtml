@model RestauranteEtec.Models.Cargo

@{
    ViewData["Title"] = "Cargo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Excluir Cargo</div>
                <hr>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <h5 class="my-3">Confirma a Exclusão deste Cargo?</h5>
                    <div class="form-group">
                        <input type="submit" value="Excluir" class="btn btn-danger mr-2" />
                        <a class="btn btn-light" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>